<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/relativelayout1">
        <TextView
            android:id="@+id/app_item_header"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/app_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_android"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/app_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_item_icon"
            android:text="APP"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/app_item_version"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="sans-serif-thin"
            android:textColor="@color/white"
            android:layout_below="@id/app_item_name"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/relativelayout2">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/app_item_card"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_margin="5dp"
            android:foreground="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/app_item_googleplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:adjustViewBounds="true"
                android:maxWidth="30dp"
                android:maxHeight="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_googleplay"/>
            <TextView
                android:id="@+id/app_item_apk"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="com.javiersantos"
                android:fontFamily="sans-serif-thin"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="20dp"
                android:foreground="?android:attr/selectableItemBackground"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativelayout2">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:id="@+id/relativelayout3">
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/app_item_start"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Open"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Run this app now"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/app_item_extra"
                android:layout_width="match_parent"
                android:layout_below="@id/app_item_start"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extra"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Extract this app under this directory"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/app_item_uninstall"
                android:layout_below="@id/app_item_extra"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:foreground="?android:attr/selectableItemBackground">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uninstall"
                    android:textSize="25sp"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Uninstall this app right now"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-thin"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
